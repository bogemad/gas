#!/usr/bin/env python3

import argparse
from gbk_annotation_stats.gbk_annotation_stats import main

parser = argparse.ArgumentParser(description="GBK annotation stats: Basic annotation statistics for eukaryotic genomes")
parser.add_argument('-o', action='store', dest='out', help='Output file')
parser.add_argument('-g', action='store', dest='gbks', nargs='+', help='GenBank files for annotation stats. As many as you like.')

args = parser.parse_args()

main(args.gbks, args.out)
